{
  "name": "blurt",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "build:client": "esbuild client/src/index.ts client/src/teacher.ts --bundle --outdir=client/dist --format=esm --target=es6 --sourcemap",
    "build:client:watch": "esbuild client/src/index.ts client/src/teacher.ts --bundle --outdir=client/dist --format=esm --target=es6 --sourcemap --watch",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "sim": "ts-node src/simulateClients.ts"
  },
  "dependencies": {
    "express": "^4.21.2",
    "qrcode": "^1.5.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/qrcode": "^1.5.5",
    "esbuild": "^0.25.1",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "author": "John J. Camilleri",
  "license": "MIT"
}
